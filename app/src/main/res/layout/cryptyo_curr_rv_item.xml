<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/idCVCurrency"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/black_shade_2"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:id="@+id/idRLCurrency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <!--text view for displaying symbol-->
        <TextView
            android:id="@+id/coin_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:padding="3dp"
            android:text="coin_name"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!--text view for displaying currency name-->
        <TextView
            android:id="@+id/coin_symbol_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/coin_name_tv"
            android:padding="3dp"
            android:text="coin_type"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <!--text view for displaying currency rate-->
        <TextView
            android:id="@+id/coin_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/coin_symbol_tv"
            android:padding="3dp"
            android:text="coin_value"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/coins_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/coin_amount_tv"
            android:padding="3dp"
            android:text="value"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/coin_amount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/coin_price_tv"
            android:padding="3dp"
            android:text="amount"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/delete_btn"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/color_one"
            android:drawableLeft="@drawable/ic_baseline_delete_24"
            android:text="@string/delete_btn"
            android:textSize="10sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/edit_btn"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/delete_btn"
            android:drawableLeft="@drawable/ic_baseline_edit_24"
            android:text="@string/edit_btn"
            android:textSize="10sp"
            android:textColor="@color/white"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>

